{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["**/node_modules"],
  "include": ["src"]
}
